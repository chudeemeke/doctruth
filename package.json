{
  "name": "doctruth",
  "version": "1.1.0",
  "description": "Universal Documentation Truth System - Never lie about your documentation again",
  "keywords": [
    "documentation",
    "truth",
    "verification",
    "automation",
    "docs",
    "cli",
    "devops",
    "testing"
  ],
  "homepage": "https://github.com/chudeemeke/doctruth",
  "bugs": {
    "url": "https://github.com/chudeemeke/doctruth/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chudeemeke/doctruth.git"
  },
  "license": "MIT",
  "author": "Chude <chude@emeke.org>",
  "main": "src/index.js",
  "bin": {
    "doctruth": "bin/doctruth.js"
  },
  "files": [
    "bin/",
    "src/",
    "presets/"
  ],
  "scripts": {
    "test": "node --test tests/*.test.js || echo 'Tests require setup'",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src bin || echo 'Linting skipped'",
    "format": "prettier --write \"**/*.{js,json,md,yml}\"",
    "truth": "./bin/doctruth.js",
    "truth:check": "./bin/doctruth.js --check",
    "truth:watch": "./bin/doctruth.js --watch",
    "prepublishOnly": "echo 'Ready to publish'",
    "release": "bun version patch && bun publish && git push --tags"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "js-yaml": "^4.1.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true
}
